<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Virtual Closet App</title>
  <style>
    .navbar-pink {
      background-color: pink;
    }
    .navbar-pink .navbar-brand,
    .navbar-pink .nav-link {
      color: black;
    }
    .navbar-pink .nav-link:hover {
      color: lightgray;
    }
    .standard-image {
      width: 413px; /* Set the desired width */
      height: 435px; /* Set the desired height */
      object-fit: cover; /* Ensure the image fits within the specified dimensions */
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-pink">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Virtual Closet App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addItem">Add new item</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/addOutfit">Add new outfit</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <br>
    <div class="text-center">
      <h2>My Virtual Closet</h2>
    </div>
    <div class="text-center mb-3">
      <button class="btn btn-outline-secondary" onclick="filterItems('Tops')">Tops</button>
      <button class="btn btn-outline-secondary" onclick="filterItems('Bottoms')">Bottoms</button>
      <button class="btn btn-outline-secondary" onclick="filterItems('All')">All Items</button>
      <button class="btn btn-outline-secondary" onclick="window.location.href='/outfits'">Outfits</button>
    </div>
    <div class="row">
      <% for(let i=0; i < items.length; i++) { %>
        <div class="col-md-4">
          <div class="card mb-4">
            <img src="<%= items[i].image %>" class="card-img-top standard-image" alt="<%= items[i].name %>">
            <div class="card-body">
              <h5 class="card-title"><%= items[i].name %></h5>
              <p class="card-text"><%= items[i].description %></p>
              <p class="card-text"><small class="text-muted">Brand: <%= items[i].brand %>, Size: <%= items[i].size %>, Category: <%= items[i].category %></small></p>
              <a href="/editItem/<%= items[i].itemId %>" class="btn btn-secondary">Edit</a>
              <a href="/deleteItem/<%= items[i].itemId %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
  <script>
    function filterItems(category) {
      const cards = document.querySelectorAll('.card');
      cards.forEach(card => {
        const itemCategory = card.querySelector('.card-text small').textContent.split(', ')[2].split(': ')[1];
        if (itemCategory === category || category === 'All') {
          card.parentElement.style.display = 'block';
        } else {
          card.parentElement.style.display = 'none';
        }
      });
    }
  </script>
</body>
</html>
